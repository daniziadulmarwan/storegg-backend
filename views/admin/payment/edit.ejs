<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form ubah jenis pembayaran</h3>
            </div>
            <form method="post" action="/payment/edit?_method=PUT">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Tipe</label>
                  <input
                    type="text"
                    class="form-control"
                    id="type"
                    name="type"
                    autocomplete="off"
                    placeholder="Masukkan tipe pembayaran"
                    value="<%= payment.type %>"
                  />
                </div>
                <div class="form-group">
                  <label>Bank</label>
                  <div class="select2-purple">
                    <select
                      class="form-control select2"
                      multiple="multiple"
                      style="width: 100%"
                      name="banks"
                      data-placeholder="Pilih bank"
                    >
                      <% banks.forEach(bank => { %>
                      <option value="<%= bank.id %>"
                        <% payment.banks.forEach(paymentBank => { %>
                          <% if (bank.id.toString() === paymentBank.id.toString()) { %>
                            selected
                          <% } %>
                        <% }) %>    
                      >
                        <%= bank.name %> | <%= bank.bankName %> | <%=
                        bank.rekeningNumber %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>
              <input type="hidden" name="id" value="<%= payment.id %>">
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Ubah</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
